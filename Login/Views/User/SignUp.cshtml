@model Login.Models.SignUpViewModel
@{
    ViewData["Title"] = "SignUp";
    Layout = "_Layout2";
}


<h1>Sign Up </h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SignUp" id="SignUpForm" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label text-white"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label text-white"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label text-white"></label>
                <input asp-for="Email" type="email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>

            </div>

            <div class="form-group">
                <label asp-for="Password" class="control-label text-white"></label>
                <input asp-for="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RePassword" class="control-label text-white">Confirm Password</label>
                <input asp-for="RePassword" type="password" class="form-control" />
                <span asp-validation-for="RePassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label text-white">Date of Birth</label>
                <input asp-for="DateOfBirth" type="date" class="control date-input" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">

                <input type="submit" value="Create" class="btn btn-primary" id="Submit-Button" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="card-link">Back to List</a>
</div>


@section Scripts {

    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}

@section ErrorMessage{
    @{ string o = ViewBag.error.ToString();
        if (o.Length != 0)
        {
            <div class="error-box">
                <p>
                    @ViewBag.error

                </p>
            </div>
        }
    }
}